<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="main_category"
        app:title="Settings">

        <Preference
            app:fragment="com.orienteer.preferences.AccountPreferenceFragment"
            app:key="account_category"
            app:summary="Edit Account Information"
            app:title="Account" />

        <Preference
            app:fragment="com.orienteer.preferences.AppearancePreferenceFragment"
            app:key="appearance_category"
            app:summary="Adjust App appearance"
            app:title="Appearance" />

        <Preference
            app:fragment="com.orienteer.preferences.NotificationsPreferenceFragment"
            app:key="notifications_category"
            app:summary="Adjust Notification settings"
            app:title="Notifications" />

        <Preference
            app:fragment="com.orienteer.preferences.PaymentsPreferenceFragment"
            app:key="payments_category"
            app:summary="Manage payment settings"
            app:title="Payments" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="about_category"
        app:title="Support">

        <Preference
            app:key="help"
            app:title="Get help" />

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback" />

        <Preference
            app:key="app_store_review"
            app:summary="Rate us in the Google Play Store"
            app:title="Like us?" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="legal_category"
        app:title="Legal">

        <Preference
            app:key="tos_preference"
            app:title="Terms of Service" />
    </PreferenceCategory>


</androidx.preference.PreferenceScreen>