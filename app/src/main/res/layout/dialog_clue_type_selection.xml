<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/text_clue_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/text_clue_type_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/waypoint_clue_type"
        app:layout_constraintTop_toBottomOf="@+id/waypoint_clue_type"
        app:srcCompat="@drawable/ic_text_format_black_24dp" />

    <ImageView
        android:id="@+id/image_clue_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/photo_clue_type_content_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/waypoint_clue_type"
        app:layout_constraintTop_toTopOf="@+id/waypoint_clue_type"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp" />

    <ImageView
        android:id="@+id/treasure_clue_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/treasure_clue_type_content_description"
        app:layout_constraintStart_toStartOf="@+id/image_clue_type"
        app:layout_constraintTop_toBottomOf="@+id/image_clue_type"
        app:srcCompat="@drawable/ic_add_location_black_24dp" />

    <ImageView
        android:id="@+id/waypoint_clue_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/image_clue_type"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_location_black_24dp"
        android:contentDescription="@string/waypoint_clue_type_content_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>