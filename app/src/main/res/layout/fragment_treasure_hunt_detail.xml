<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout">

    <data>

        <variable
            name="viewModel"
            type="com.orienteer.treasurehuntdetail.TreasureHuntDetailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/main_info_section"
            bind:adventure="@{viewModel.selectedAdventure}"
            layout="@layout/detail_main_info_section" />

        <include layout="@layout/detail_action_buttons"
            android:id="@+id/action_button_section"/>

    </LinearLayout>

</layout>
