<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout">

    <data>

        <variable
            name="viewModel"
            type="com.orienteer.treasurehuntdetail.TreasureHuntDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/detail_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/detail_toolbar"
            bind:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scroll_detail_page"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="0dp"
            bind:layout_constraintTop_toTopOf="parent"
            bind:layout_constraintBottom_toTopOf="@id/action_button_section"
            bind:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/adventure_main_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/detail_gallery"
                    bind:adventure="@{viewModel.selectedAdventure}" />

                <include
                    android:id="@+id/main_info_section"
                    layout="@layout/detail_main_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adventure="@{viewModel.selectedAdventure}" />


                <include layout="@layout/divider" />

                <include
                    android:id="@+id/clue_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/detail_clue_overview"
                    bind:adventure="@{viewModel.selectedAdventure}" />

                <include
                    android:id="@+id/main_info_section1"
                    layout="@layout/detail_main_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adventure="@{viewModel.selectedAdventure}" />


                <include layout="@layout/divider" />

                <include
                    android:id="@+id/clue_overview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/detail_clue_overview"
                    bind:adventure="@{viewModel.selectedAdventure}" />

                <include
                    android:id="@+id/main_info_section2"
                    layout="@layout/detail_main_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adventure="@{viewModel.selectedAdventure}" />


                <include layout="@layout/divider" />

                <include
                    android:id="@+id/clue_overview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/detail_clue_overview"
                    bind:adventure="@{viewModel.selectedAdventure}" />

            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/action_button_section"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/detail_action_buttons"
            bind:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
