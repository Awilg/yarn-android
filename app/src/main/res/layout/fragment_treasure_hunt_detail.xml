<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.orienteer.treasurehuntdetail.TreasureHuntDetailViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_on_background"
            android:translationZ="10dp"
            app:layout_anchor="@id/scroll_detail_page"
            app:layout_anchorGravity="top"
            app:layout_behavior=".behaviors.AppBarFadeBehavior"
            app:paddingTopSystemWindowInsets="@{true}">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:elevation="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:menu="@menu/app_bar_detail"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_detail_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/adventure_main_gallery"
                    layout="@layout/detail_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adventure="@{viewModel.selectedAdventure}" />

                <include
                    android:id="@+id/main_info_section"
                    layout="@layout/detail_main_info_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adventure="@{viewModel.selectedAdventure}" />


                <include layout="@layout/divider" />

                <include
                    android:id="@+id/clue_overview"
                    layout="@layout/detail_clue_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:adventure="@{viewModel.selectedAdventure}" />

                <include layout="@layout/divider" />

                <include
                    android:id="@+id/detail_main_review_section"
                    layout="@layout/detail_main_review_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:viewModel="@{viewModel}" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/action_button_section"
            layout="@layout/detail_action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/scroll_detail_page"
            app:layout_anchorGravity="bottom|end" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
