<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <data>
        <variable
            name="adventure"
            type="com.orienteer.models.TreasureHunt" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/treasure_hunt_detail_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/treasure_hunt_detail_img_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/treasure_hunt_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{viewModel.selectedTreasureHunt.name}"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/circularImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/treasure_hunt_detail_img"
            tools:text="Super Awesome Fun Adventure!" />

        <TextView
            android:id="@+id/treasure_hunt_detail_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@{viewModel.selectedTreasureHunt.description}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/treasure_hunt_detail_name"
            app:layout_constraintStart_toStartOf="@+id/treasure_hunt_detail_name"
            app:layout_constraintTop_toBottomOf="@id/treasure_hunt_detail_name"
            tools:text="This hunt takes you on a magical journey through my favorite places in Seattle. I hope you enjoy it! =]" />


        <com.mikhaellopez.circularimageview.CircularImageView

            android:id="@+id/circularImageView"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/treasure_hunt_detail_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>